<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:paddingTop="?attr/actionBarSize">

    <android.support.v7.widget.CardView
        android:id="@+id/tipCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tip"
            android:adjustViewBounds="true"/>

                <TextView
                    android:layout_marginTop="64dp"
                    android:background="#99000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/icons"
                    android:layout_alignEnd="@+id/image"
                    android:textSize="18sp"
                    android:text="5-09-16"/>
            </RelativeLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="16sp"
                android:text="How to Brew your Coffee to Perfection"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:textSize="14sp"
            android:text="Try this new blintz tip..............................ksdfaksjdfalkjlkdsja;lkjflkaflkjal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
       >
        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tip2"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:background="#99000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@color/icons"
                        android:layout_alignEnd="@+id/image1"
                        android:textSize="12sp"
                        android:text="5-08-16"/>
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:background="@color/icons"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:textSize="14sp"
                        android:layout_alignBottom="@+id/image1"
                        android:text="Explore our New Baskets"/>

                </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tip1"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:background="#99000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@color/icons"
                        android:layout_alignEnd="@+id/image2"
                        android:textSize="12sp"
                        android:text="5-07-16"/>
                    <TextView
                        android:id="@+id/text1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:background="@color/icons"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:textSize="14sp"
                    android:layout_alignBottom="@+id/image2"
                    android:text="Surprise your Mom"/>

                </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD MORE"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
</LinearLayout>
    </ScrollView>

    <include layout="@layout/appbar_layout"/>

</RelativeLayout>