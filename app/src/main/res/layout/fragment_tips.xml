<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="?attr/actionBarSize">

            <android.support.v7.widget.CardView
                android:id="@+id/tipCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/tipImage1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/tipImage1"
                            android:layout_marginTop="64dp"
                            android:background="#99000000"
                            android:padding="8dp"
                            android:text="5-09-16"
                            android:textColor="@color/icons"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:text="How to Brew your Coffee to Perfection"
                        android:textColor="@color/primary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="Whatâ€™s your favorite way to enjoy coffee?

Do you want a hearty mug at breakfast?  A frothy afternoon cappuccino? Do you like it hot or cold? Milder or more robust? "
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/tipImage2"
                            android:layout_width="match_parent"
                            android:layout_height="175dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tip2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/tipImage2"
                            android:background="#99000000"
                            android:padding="8dp"
                            android:text="5-08-16"
                            android:textColor="@color/icons"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tipImage2"
                            android:background="@color/icons"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:text="Explore our New Baskets"
                            android:textColor="@color/primary"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/tipImage3"
                            android:layout_width="match_parent"
                            android:layout_height="175dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tip1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/tipImage3"
                            android:background="#99000000"
                            android:padding="8dp"
                            android:text="5-07-16"
                            android:textColor="@color/icons"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tipImage3"
                            android:background="@color/icons"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:text="Surprise your Mom"
                            android:textColor="@color/primary"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="LOAD MORE"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/appbar_layout" />

</RelativeLayout>